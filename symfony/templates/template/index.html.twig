{% extends 'base.html.twig' %}

{% block backButton %}
    {% include 'backButton.html.twig' %}
{% endblock %}

{% block sidebar %}
    {% include 'sideBar.html.twig' with {
        'items' : templates|map(template => {
            'name' : template.name,
            'id' : template.id,
            'primary': template.data.primaryColor,
            'secondary': template.data.secondaryColor,
        })
    } %}
{% endblock %}

{% block body %}
    <div id="formTemplate" class="form-template">
        {% include 'template/form.html.twig' with {
            template : templates|first
        } %}
    </div>
{% endblock %}

{% block javascript %}
<script type="module" src="/js/template/index.js"></script>
{% endblock %}
