<style>
    .gotoElement { color: black; text-decoration: none; }
    .gotoElement:hover { filter: brightness(85%); }
</style>

<div class="filtre_persona filtre card side-bar">
    {% if items is empty %}
        <p class="no_result">Aucun résultat</p>
    {% endif %}
    {% for item in items %}
        {# le premier élément prend en classe active #}
        <div class="persona element_filtre {% if loop.first %}active{% endif %}">
            <p class="nom_persona nom_element" data-bs-target="{{ item.id }}">{{ item.name }}</p>
            {% if item.primary is defined %}
                <div style="background-color: {{ item.primary }}; width: 15px; height: 15px"></div>
            {% endif %}
            {% if item.secondary is defined %}
                <div style="background-color: {{ item.secondary }}; width: 15px; height: 15px"></div>
            {% endif %}
        </div>
    {% endfor %}
    {% if noPlus is defined and not noPlus %}
        <a data-bs-target class="gotoPersonas gotoElement" id="sidebar-add">+</a>
    {% endif %}
</div>
