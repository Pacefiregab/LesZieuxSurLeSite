<style>
    .gotoElement {
        color: black;
        text-decoration: none;
    }

    .gotoElement:hover {
        filter: brightness(85%);
    }
</style>

<div id="sidebar" class="filtre_persona filtre card side-bar">
    <div id="listElement">
        {% if items is empty %}
            <p class="no_result">Aucun résultat</p>
        {% endif %}
        {% for item in items %}
            {# le premier élément prend en classe active #}
            <div class="persona element_filtre" data-bs-target="{{ item.id }}" {% if loop.first %}active{% endif %}">
                <p class="nom_persona nom_element">{{ item.name }}</p>

                <div class="d-inline-flex">
                    {% if item.primary is defined %}
                        <div class="icon_color" style="background-color: {{ item.primary }};"></div>
                    {% endif %}
                    {% if item.secondary is defined %}
                        <div class="icon_color" style="background-color: {{ item.secondary }};"></div>
                    {% endif %}
                </div>
        </div>
        {% endfor %}
    </div>
    {% if noPlus is not defined %}
        <a data-bs-target="0" class="gotoPersonas gotoElement" id="sidebar-add">+</a>
    {% endif %}
</div>

{% block javascript %}
<script type="module" src="/js/sideBar.js"></script>
{% endblock %}
