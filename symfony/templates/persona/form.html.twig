<form action="{{ persona.id
? path('personas_edit', {id: persona.id})
: path('personas_create_post') }}"
      method="post">

    <div id="fields">
        <div class="card">
            <label for="name">Nom de l'objectif</label>
            <input type="text" id="name" name="name" value="{{ persona.name }}">
        </div>

        <div class="card">
            <label for="libelle"> Libelle de l'objectif</label>
            <input type="text" id="libelle" name="libelle" value="{{ persona.libelle }}">
        </div>


        <div class="card">
            <label for="libelle">Temps maximum d'un enregistrement (s)</label>
            <input type="number" id="duration" name="duration" value="{{ persona.duration }}">
        </div>

        <div class="card">
            <label for="flag"> Drapeau </label>

            <select name="flag" id="flag">
                {% for flag, libelle in constant('App\\Entity\\Persona::FLAGS_LIBELLE') %}
                    <option
                        value="{{ flag }}"
                        {{ persona.flag is same as(flag) ? 'selected' }}
                    >
                        {{ libelle }}
                    </option>
                {% endfor %}
            </select>
        </div>


    </div>

    <button type="submit">
        Valider
    </button>
</form>

