<div class="filtre_persona">
    {% if items is empty %}
        <p class="no_result">Aucun résultat</p>
    {% endif %}
    {% for item in items %}
        {# le premier élément prend en classe active #}
        {% if loop.first %}
            <div class="persona active">
                <p class="nom_persona" data-bs-target="{{ item.id }}">{{ item.name }}</p>
            </div>
        {% else %}
            <div class="persona">
                <p class="nom_persona" data-bs-target="{{ item.id }}">{{ item.name }}</p>
            </div>
        {% endif %}
    {% endfor %}
</div>
