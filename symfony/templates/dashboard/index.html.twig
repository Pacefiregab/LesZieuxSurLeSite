{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}My cool blog posts{% endblock %}

{% block body %}
    <h1>Les zyeux sur le site</h1>
    <div id="dashboardContent">
        {% include 'dashboard/filtrePersona.html.twig' with {'items' : personas} %}

        <div id="chart" class="card">
            Je suis un graphique
        </div>

        <div id="dashboardStatsArea">
            {% include 'dashboard/card.html.twig' with {'id' : 'nombreSessions', 'title': 'Nombre de sessions', 'data':'15', 'evolution':'-3', 'info': 'sur les 30 derniers jours '} %}
            {% include 'dashboard/card.html.twig' with {'id' : 'nombreInterfaces', 'title': "Nombre d'interfaces", 'data':'3', 'evolution':'+1', 'info': 'sur les 30 derniers jours '} %}
            {% include 'dashboard/card.html.twig' with {'id' : 'tauxSucces', 'title': "Taux de réussite", 'data':'79%', 'evolution':'-8%', 'info': 'sur les 30 derniers jours '} %}
            {% include 'dashboard/card.html.twig' with {'id' : 'tempsMin', 'title': "Temps minimum", 'data':'0:39', 'evolution':'-4s', 'info': 'sur les 30 derniers jours '} %}
            {% include 'dashboard/card.html.twig' with {'id' : 'tempsMoyen', 'title': "Temps moyen", 'data':'1:35', 'evolution':'+6s', 'info': 'sur les 30 derniers jours '} %}
            {% include 'dashboard/card.html.twig' with {'id' : 'tempsMax', 'title': "Temps maximum", 'data':'1:59', 'evolution':'-8s', 'info': 'pour le personna réussi, sur les 30 derniers jours '} %}
        </div>
    </div>

{% endblock %}
